apiVersion: v1
kind: Config
clusters:
- name: ${name}-cluster
  cluster:
    server: ${server}
    certificate-authority-data: ${ca_cert}
users:
- name: ${name}-user
  user:
    client-certificate-data: ${kubelet_cert}
    client-key-data: ${kubelet_key}
current-context: ${name}-context
contexts:
- name: ${name}-context
  context:
    cluster: ${name}-cluster
    user: ${name}-user
